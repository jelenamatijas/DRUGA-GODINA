{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile SQLite",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-c",
                "sqlite3.c",
                "-o",
                "sqlite3.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles sqlite3.c to an object file."
        },
        {
            "label": "Build Project with Crow and MySQL",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "main.cpp",
                "UserTable.cpp",
                "TicketsTable.cpp",
                "Ticket.cpp",
                "User.cpp",
                "sqlite3.o",
                "-o",
                "app",
                "-I",
                "C:/Users/JM/Desktop/OSI2024-Grupa-6/Crow/include",
                "-I",
                "C:/Boost",
                "-I",
                "C:/Users/JM/Desktop/OSI2024-Grupa-6/Asio/asio/include",
                "-I",
                "C:/Program Files/MySQL/MySQL Connector C++ 9.1/include",
                "-L",
                "C:/Program Files/MySQL/MySQL Connector C++ 9.1/lib64",
                "-lmysqlcppconn-10-vs14",
                "-lsqlite3",
                "-lws2_32",
                "-lmswsock"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Links all files, including Crow, Asio, and MySQL Connector libraries into the final executable."
        }
    ]
}
